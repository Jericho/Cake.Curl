{
  "version": "1.0.0-beta2",
  "description": "Cake.Curl is a cross-platform add-in for Cake that allows to transfer files to a remote URL using Curl.",
  "authors": [
    "Enrico Campidoglio"
  ],

  "packOptions": {
    "projectUrl": "https://github.com/ecampidoglio/Cake.Curl",
    "licenseUrl": "https://github.com/ecampidoglio/Cake.Curl/blob/master/LICENSE.txt",
    "tags": [
      "Cake",
      "Build",
      "Curl"
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/ecampidoglio/Cake.Curl"
    }
  },

  "buildOptions": {
    "xmlDoc": true,
    "debugType": "portable"
  },

  "dependencies": {
    "Cake.Core": "0.17.0"
  },

  "frameworks": {
    "netstandard1.6": {
      "buildOptions": {
        "define": [
          "NETCORE"
        ]
      },
      "dependencies": {
        "NETStandard.Library": {
          "version": "1.6.0"
        }
      }
    },
    "net45": {
    }
  }
}
